<!-- Image and text -->

<h1>Cocktails</h1>

<%= link_to "Add new cocktail", new_cocktail_path, class:"btn btn-primary" %>

<div class="card-group">
  <% @cocktails.each do |cocktail| %>
  <div class="card" style="width: 18rem;">
    <%= cl_image_tag cocktail.photo, class: "card-img-top"%>
    <div class="card-body">
      <h5 class="card-title"><%= cocktail["name"] %></h5>
      <%= link_to "Details", cocktail_path(cocktail["id"]), class: "btn btn-dark" %>
    </div>
  </div>
  <% end %>
</div>
